      } else if (currentTime >= tone.begin) {
        // éƒ¨åˆ†é«˜äº®å½“å‰å­—ç¬¦
        const charProgress = (currentTime - tone.begin) / (tone.end - tone.begin);
        highlightedChars += tone.word.length * charProgress;
