    }

    const isVisible = this.isLineVisible(index);

    // ğŸ¯ æ‹–æ‹½æ—¶ç§»é™¤ä¿åº•æœºåˆ¶ï¼Œå…è®¸æ‰€æœ‰è¡Œï¼ˆåŒ…æ‹¬åŸå½“å‰è¡Œï¼‰æ­£å¸¸æŒ‰ä½ç½®éšè—
    // è¿™æ ·å‘ä¸Šæ»šåŠ¨æ—¶å½“å‰è¡Œå¯ä»¥æ­£å¸¸ç§»å‡ºè§†å›¾é¡¶éƒ¨
    if (this.mDraggingInProgress) {
