      } else if (/[a-zA-Z0-9]/.test(char)) {
        // è‹±æ–‡å­—æ¯å’Œæ•°å­—ï¼Œå®½åº¦çº¦ä¸ºå­—ä½“å¤§å°çš„0.5å€
        estimatedWidth += fontSize * 0.5;
