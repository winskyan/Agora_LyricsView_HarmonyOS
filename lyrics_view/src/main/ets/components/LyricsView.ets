    const currentPlayPosition = actualTextWidth * progress;
    const halfContainerWidth = containerWidth / 2;

    // è®©å½“å‰æ’­æ”¾ä½ç½®ä¿æŒåœ¨å®¹å™¨ä¸­å¤®
    let targetOffset = currentPlayPosition - halfContainerWidth;

