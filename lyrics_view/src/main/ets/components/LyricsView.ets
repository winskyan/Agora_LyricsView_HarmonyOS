      // å¯åŠ¨æ–°å½“å‰è¡Œçš„æ–‡æœ¬æ»šåŠ¨
      const lyricsModel = this.mLyricMachine?.getLyricsModel();
      if (lyricsModel && lyricsModel.lines && line >= 0 && line < lyricsModel.lines.length) {
        this.startTextScrollAnimation(lyricsModel.lines[line]);
      }
    }
  }

